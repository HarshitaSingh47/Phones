<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harshitasingh.sqlite.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/layout1"
    android:background="#f9f7f2">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number"
        android:id="@+id/tv1"
        android:layout_below="@+id/ed0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Db"
        android:id="@+id/b1"
        android:onClick="Update"
        android:background="#7ff2b8"
        android:layout_below="@+id/ed1"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch results"
        android:id="@+id/b2"
        android:onClick="view1"
        android:background="#7ff2b8"
        android:layout_alignTop="@+id/b1"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed0"
        android:layout_below="@+id/textView"
        android:inputType="textNoSuggestions"


        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"


        android:id="@+id/ed1"
        android:layout_below="@+id/tv1"
        android:inputType="textNoSuggestions"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Row No."
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/b1"
        android:layout_toStartOf="@+id/b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ed2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Info"
        android:id="@+id/b3"
        android:layout_below="@+id/ed2"
        android:layout_centerHorizontal="true"
        android:background="#7ff2b8"
        android:onClick="getInfo"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/b3"
        android:layout_centerHorizontal="true"
        android:text="Movies"
        android:onClick="MovieList"
        android:background="#7ff2b8"
        android:allowUndo="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fts"
        android:id="@+id/button"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
